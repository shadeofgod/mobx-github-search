{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "never"],
    "member-access": [true, "no-public"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
